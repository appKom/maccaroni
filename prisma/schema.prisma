generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Bid {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  amount        Float
  nameOfBidder  String
  emailOfBidder String
  owId          String
  Auction       Auction  @relation(fields: [auctionId], references: [id], onDelete: Cascade)
  auctionId     String
}

model Auction {
  id              String  @id @default(cuid())
  name            String
  description     String
  minimumIncrease Int
  startPrice      Int
  image           String?
  bids            Bid[]
}

model RuleSheet {
  id          String @id @default(cuid())
  description String
}

model PrizeGoal {
  id          String @id @default(cuid())
  goal        Int
  description String
}

enum CollectedType {
  SILENT_AUCTION
  LIVE_AUCTION
  VIPPS
}

model Collected {
  id            String        @id @default(cuid())
  amount        Int
  createdAt     DateTime      @default(now())
  nameOfBidder  String
  emailOfBidder String?
  type          CollectedType
  auctionId     String?
  bidId         String?
  description   String?
  order         Int?          @unique @default(autoincrement())
}

model Competition {
  id          String   @id @default(cuid())
  title       String
  description String
  image       String?
  time        DateTime
}
