generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL_NON_POOLING")
}

model Bid {
  id            String   @id @default(cuid())
  amount        Float
  nameOfBidder  String
  auctionId     String
  owId          String
  emailOfBidder String
  createdAt     DateTime @default(now())
  Auction       Auction  @relation(fields: [auctionId], references: [id])
}

model Auction {
  id              String  @id @default(cuid())
  name            String
  description     String
  minimumIncrease Int
  startPrice      Int
  image           String?
  bids            Bid[]
}

model RuleSheet {
  id          String @id @default(cuid())
  description String
}

model PrizeGoal {
  id          String @id @default(cuid())
  goal        Int
  description String
}

model Collected {
  id            String        @id @default(cuid())
  amount        Int
  description   String?
  type          CollectedType
  auctionId     String?
  nameOfBidder  String
  bidId         String?
  emailOfBidder String?
  createdAt     DateTime      @default(now())
  order         Int           @unique @default(autoincrement())
}

model Competition {
  id          String   @id @default(cuid())
  title       String
  description String
  image       String?
  time        DateTime
}

enum CollectedType {
  SILENT_AUCTION
  LIVE_AUCTION
  VIPPS
}
